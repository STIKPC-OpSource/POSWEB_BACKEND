{
  "name": "posweb-backend",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "start": "bun run dist/index.js",
    "lint": "bun x ultracite check",
    "format": "bun x ultracite fix",
    "db:gen": "bun x drizzle-kit generate",
    "db:mig": "bun x drizzle-kit migrate",
    "db:push": "bun x drizzle-kit push",
    "db:seed": "bun run src/db/seed.ts",
    "db:studio": "bun x drizzle-kit studio"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "better-auth": "^1.4.13",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "ultracite": "7.0.11"
  }
}
